<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @RenderSection("scripts", required: false)
    @{ Html.RenderPartial("_Scripts"); }
    <title>Funtility - @ViewBag.Title</title>
</head>

<body id="site-main">

    <div class="site-grid>">

        <!------ site-grid ROW 1 ------>
        <div id="site-header" class="site-header">
            @{ Html.RenderPartial("_HeaderPartial"); }
        </div>

        <!------ site-grid ROW 2 ------>
        <div id="site-body" class="site-body">
            @RenderBody()
        </div>

        <!------ site-grid ROW 3 ------>
        <div id="site-footer" class="site-footer">
            @{ Html.RenderPartial("_FooterPartial"); }
        </div>


    </div> <!-- End Site Grid -->

    <!--
        This places a div over the whole page to:
        - Create the fade effect
        - Force interaction with the modal
        - Facilitate capture of viewport dimensions
    -->
    <div id="modal" style="display: none;">
        @* Render partial here *@
    </div>

    <script>
        ResizeBodyArea();
    </script>

</body>

</html>
